{% extends 'base.html.twig' %}

{% block title 'SnowTricks'  %}

{% block body %}

    <main role="main">
        <div id="home">
            <div class="landing-text">
                <h1 class="display-3">SnowTricks</h1>
                <h3>Communaut√© de Snowboarder.</h3>
            </div>
            <div id="scroll-down"><a class="btn btn-secondary" href="#show-tricks"><i class="fas fa-lg fa-chevron-down"></i></a></div>
        </div>
        <section id="show-tricks">
            <div class="container-fluid">
                <h1>Les tricks</h1>
                <div class="row flex" id="tricks" data-loadmore="{{ path('showmoretricks') }}" data-totaltricks="{{ total_tricks.total }}">
                    {% for trick in tricks %}
                        <div class="col-lg-3" id="{{ trick.id }}">
                            <div class="card">
                                <img src="img/background_home.jpg" class="card-img-top" alt="test">
                                <div class="card-body d-flex justify-content-between bd-highlight mb-3">
                                    <div class="d-flex justify-content-start">
                                        <h5 class="card-title">
                                            <a href="{{ path('trick.show', {id: trick.id, slug: trick.slug}) }}"> {{ trick.name }}</a>
                                        </h5>
                                    </div>
                                    {% if is_granted('ROLE_USER') %}
                                        <div class="d-flex justify-content-end">
                                            <div class="btn-group">
                                                <a href="{{ path('admin.trick.edit', {id: trick.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-delete-trick" data-myvalue="trouducul" data-myvar="bisbis">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="d-flex justify-content-center" id="end"><button type="button" id="load-more" class="btn btn-primary">Load more</button></div>
                <div class="d-flex justify-content-center" id="end"><button type="button" id="delete" class="btn btn-danger">Test delete</button></div>
            </div>
        </section>
        <button type="button" class="btn btn-secondary" id="scroll-top"><i class="fas fa-chevron-up"></i></button>

        <div class="modal fade" id="modal-delete-trick" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Supprimer</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Tu es sur de vouloir faire cela?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>

                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}